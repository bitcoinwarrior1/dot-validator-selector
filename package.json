  "bugs": {
    "url": "https://github.com/James-Sangalli/dot-validator-selector/issues"
  },
  "homepage": "https://github.com/James-Sangalli/dot-validator-selector#readme",
  "dependencies": {
    "@polkadot/api": "^6.0.5"
  },
  "devDependencies": {
    "browser-resolve": "^2.0.0",
    "chai": "^4.3.4",
    "esmify": "^2.1.1",
    "mocha": "^9.1.1"
  }
